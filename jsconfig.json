{
  "include": [
    "src/**/*",
    "model/**/*",
    "server/**/*",
    "script/**/*",
    "config/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],

  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@model/*": ["model/*"]
    }
  }
}