{
  "compilerOptions": {
    // 与 Vue 的浏览器支持保持一致
    "target": "esnext",
    // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
    "module": "esnext",
    // 这可以对 `this` 上的数据属性进行更严格的推断
    "strict": true,

    "moduleResolution": "node",
    "experimentalDecorators": true,
    //jsx需要使用preserve模式
    "jsx": "preserve",
    //允许编译js
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@model/*": ["model/*"]
    },
    
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  //此处和jsconfig冲突
  "include": [ 
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}